mutate(Date = as.character(Date)) %>%
mutate(Date = paste0(Date, ".15")) %>%
mutate(Date = str_replace_all(Date, "\\.2(?=\\.)", ".2000")) %>%
mutate(Date = str_replace_all(Date, "\\.201(?=\\.)", ".2010")) %>%
mutate(Date = str_replace_all(Date, "\\.202(?=\\.)", ".2020")) %>%
mutate(Date = myd(Date))
